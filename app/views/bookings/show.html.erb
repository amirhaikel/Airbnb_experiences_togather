<p style="color: green"><%= notice %></p>

<%= render @booking %>

<div>
  <% if policy(@booking).edit? %>
    <%= link_to "Edit this booking", edit_booking_path(@booking) %>
  <% end %>
  <%= link_to "Back to bookings", bookings_path %>
  <%= button_to "Destroy this booking", @booking, method: :delete if policy(@booking).destroy? %>
</div>

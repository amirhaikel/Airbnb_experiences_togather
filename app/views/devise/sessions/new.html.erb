<div class="container">
  <h2 class="text-center mb-4">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
    <div class="col-md-12">
      <%= f.label :email, "Email", class: "form-label" %>
      <%= f.input :email,
                  label: false,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-control" } %>
    </div>

    <div class="col-md-12">
      <%= f.label :password, "Password", class: "form-label" %>
      <%= f.input :password,
                  label: false,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "form-control" } %>
    </div>

    <div class="col-md-12">
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="d-grid gap-2 col-12 mx-auto text-center">
      <%= f.button :submit, "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
